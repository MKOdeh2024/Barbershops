{
  "name": "barbershop-backend",
  "version": "1.0.0",
  "description": "Backend for the Barbershop Booking App",
  "main": "./dist/server.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch --config jest.config.ts",
    "build-tsc": "tsc -w",
    "run-watch": "nodemon ./dist/server.js",
    "dev": "concurrently \"npm:build-tsc\" \"npm:run-watch\"",
    "start": "node ./dist/server.js",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/config/db.js",
    "migration:generate": "npm run typeorm -- migration:generate ./src/migrations/$npm_config_name",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql": "^2.18.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.86",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "nodemon": "^2.0.15",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
